<%= form_for(@job, :html => {:multipart => true}) do |f| %>
  <%= error_messages_for(@job) %>
  <div class="field">
    <%= f.label :category_id, "Категория" %>
    <%= select("job", "category_id", 
      Category.all.collect { |p| [ p.title, p.id ] }) %>
  </div>
  <div class="field">
    <%= f.label :title, "Название" %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description, "Описание" %>
    <%= f.text_area :description, :rows => 10, :cols => 40 %>
  </div>
  <div class="field">
    <%= f.label :image, "Файл" %>
    <%= f.file_field :image %>
  </div>
  <div class="field">
    <%= hidden_field_tag "job[user_id]", current_user.id %>
  </div>
  <div class="actions">
    <%= f.submit "Отправить" %>
  </div>
<% end %>