<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="wrapper">
    <!-- header -->
    <div id="header">
      <h1 id="site-title"><a href="/">Des-Engine</a></h1>
      <div id="auth-user">
        <a href="#" id="signup-link">Регистрация</a>
        <a href="#" id="login-link">Войти</a>
        <form action="">
          <input type="text" name="username" class="a-username" placeholder="логин">
          <input type="password" name="password" class="a-password" placeholder="пароль">
          <input type="submit" value="Войти" class="a-subit">
        </form>
      </div>
    </div>
    <!-- main content -->
    <div id="main-content">
      <%= render 'layouts/sidebar' %>
      <!-- content -->
      <div id="content">
        <%= yield %>
      </div>
    </div>
    <!-- footer -->
    <div id="footer">
      <div id="copyright">&copy 2012. Кусаинов Ерлан</div>
    </div>
  </div>
</body>
</html>
