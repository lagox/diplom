<%= form_for(@job, :html => {:multipart => true}) do |f| %>
  <%= error_messages_for(@job) %>
  <div class="field">
    <%= f.label :title, "Название" %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description, "Описание" %>
    <%= f.text_area :description, :rows => 10, :cols => 40 %>
  </div>
<% end %>