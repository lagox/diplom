<div id="sidebar">
  <% if current_user %>
    <%= link_to "Загрузить работу", new_job_path, :class => "button-upload" %>
  <% end %>
  <h1 class="title-category">Пользователи</h1>
  <div class="content-sidebar">
    <ul>
      <li><%= link_to "Все", users_path %></li>
      <li><%= link_to "Дизайнеры", designers_users_path %></li>
      <li><%= link_to "Фотографы", photographers_users_path %></li>
    </ul>
  </div>
