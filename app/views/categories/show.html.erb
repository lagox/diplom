<div id="category-description">
  <%= @category.description %>
</div>
<div id="category-jobs">
  <ul>
    <% @jobs.each do |j| %>
      <li>
        <h1 class="job-title"><%= j.title %></h1>
        <div class="one-job">
          <%= link_to(image_tag(j.image_url(:thumb)), j) %>  
        </div>
      </li>
    <% end %>
      <div class="clear"></div>
  </ul>
</div>
<%= paginate @jobs %>

