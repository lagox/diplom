<% if flash[:notice] %>
  <% flash.each do |name, msg| %>
    <div id="flash_<%= name %>" class="alert alert-success">
      <%= msg %>
    </div>
  <% end %>
<% elsif flash[:alert] %>
  <% flash.each do |name, msg| %>
    <div id="flash_<%= name %>" class="alert alert-error">
      <%= msg %>
    </div>
  <% end %>
<% elsif flash[:error] %>
<% flash.each do |name, msg| %>
  <div id="flash_<%= name %>" class="alert alert-error">
    <%= msg %>
  </div>      
  <% end %>
<% end %>